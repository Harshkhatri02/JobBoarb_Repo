        const searchInput = document.getElementById('searchInput');
const jobContainer = document.getElementById('jobContainer');

// Function to fetch jobs based on search keyword
async function searchJobs(keyword) {
    try {
        const response = await fetch(`/search-jobs?keyword=${keyword}`);
        const jobs = await response.json();
        displayJobs(jobs);
    } catch (error) {
        console.error('Error searching for jobs:', error);
    }
}

// Function to display jobs
function displayJobs(jobs) {
    jobContainer.innerHTML = '';
    jobs.forEach(job => {
        const jobCard = document.createElement('div');
        jobCard.classList.add('job-card');
        jobCard.innerHTML = `
            <h2>${job.title}</h2>
            <p>${job.jobDescription}</p>
      <small><a href="/job-details?id=${job._id}" class="view-details-link">View Details</a></small>

        `;
        jobContainer.appendChild(jobCard);
    });
}

// Event listener for search input
function searchForJobs(){
    
        const keyword = searchInput.value.trim();
        if (keyword.length > 0) {
            searchJobs(keyword);
        }
    };


    async function fetchAndDisplayJobs() {
  try {
    const response = await fetch('/list-jobs');
    if (!response.ok) {
      throw new Error('Failed to fetch job data');
    }
    const jobs = await response.json();
    console.log('client side',jobs);
    displayDefaultJobs(jobs); // Assuming displayJobs is a function to render the jobs
  } catch (error) {
    console.error(error);
  }
}

// Function to render jobs in the UI
function displayDefaultJobs(jobs) {
  const container = document.getElementById('jobContainer');
  container.innerHTML = ''; // Clear existing content
  jobs.forEach(job => {
    const jobCard = document.createElement('div');
    jobCard.classList.add('job-card');
    jobCard.innerHTML = `
      <h2>${job.title}</h2>
      <p>${job.jobDescription}</p>
      <a href="/job-detail/${job._id}" class="btn btn-primary">View Details</a
    `;
    container.appendChild(jobCard);
  });
}

// Call fetchAndDisplayJobs when the page loads
window.addEventListener('DOMContentLoaded', fetchAndDisplayJobs);


